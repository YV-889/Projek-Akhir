# ===========================================
# Penjadwalan App - Environment Configuration Template
# ===========================================
# Copy this file to .env and update the values as needed

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080/api
REACT_APP_BACKEND_URL=http://localhost:8080
REACT_APP_ENVIRONMENT=development
REACT_APP_APP_NAME=Penjadwalan App
REACT_APP_VERSION=1.0.0

# Backend Database Configuration
DB_HOST=db
DB_NAME=penjadwalan_db
DB_USER=root
DB_PASSWORD=
DB_PORT=3306

# MySQL Configuration for Docker/Podman
MYSQL_ROOT_PASSWORD=
MYSQL_ALLOW_EMPTY_PASSWORD=1
MYSQL_DATABASE=penjadwalan_db

# Development Ports
BACKEND_PORT=8080
FRONTEND_PORT=3000
MYSQL_PORT=3306
PHPMYADMIN_PORT=8081

# External API Configuration
HOLIDAY_API_URL=https://api-harilibur.vercel.app/api
HOLIDAY_API_TIMEOUT=5000

# Application Settings
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id

# Docker/Podman Configuration
COMPOSE_PROJECT_NAME=penjadwalan-app
